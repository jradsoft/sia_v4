<Window x:Class="wpfEFac.Views.Productos.CategoriaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nueva Categoria" Height="141" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="74*" />
            <RowDefinition Height="28*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <TextBlock Name="txbNombreCategoria" Text="Escruba el nombre de la categoria" VerticalAlignment="Top" Margin="0,0,0,10" />
            <TextBox Name="txtNombreCategoria" />
            <Label Name="lblError" />
        </StackPanel>
        <Button Content="Cancelar" Grid.Row="1" Height="23" HorizontalAlignment="Right" Name="bttCancelar" VerticalAlignment="Center" Width="75" Click="bttCancelar_Click" />
        <Button Content="Guardar" Grid.Row="1" Height="23" HorizontalAlignment="Right" Margin="0,0,85,0" Name="bttnGuardar" VerticalAlignment="Center" Width="75" Click="bttnGuardar_Click" />
    </Grid>
</Window>
